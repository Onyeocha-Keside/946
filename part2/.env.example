# Insurance RAG API Environment Configuration

# GOOGLE GEMINI
GOOGLE_API_KEY=your-google-api-key-here
GEMINI_MODEL=gemini-pro
GEMINI_TEMPERATURE=0.1
GEMINI_MAX_TOKENS=2048
GEMINI_TOP_P=0.8
GEMINI_TOP_K=40

# DATABASE (Uncomment DATABASE_URL to override individual components)
# DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/insurance_rag
DB_HOST=localhost
DB_PORT=5432
DB_NAME=insurance_rag
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=Insurance Agentic RAG API
API_VERSION=2.0.0

# Excel Processing
MAX_EXCEL_ROWS=100000
EXCEL_CHUNK_SIZE=1000
MAX_FILE_SIZE_MB=50

# Performance Settings
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
QUERY_TIMEOUT=60

# LangGraph Configuration
LANGGRAPH_CHECKPOINTER=memory
LANGGRAPH_MAX_STEPS=10
LANGGRAPH_TIMEOUT=300

# Caching
ENABLE_CACHING=true
CACHE_TTL=3600
# REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALLOWED_FILE_TYPES=xlsx,xls
